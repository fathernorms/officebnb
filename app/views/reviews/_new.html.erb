<%# This view is a partial and shows the content to be shown in the modal %>

<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">Close</button>
  <h4 class="modal-title" id="myModalLabel">Leave a review</h4>
</div>
<div class="modal-body">
  <div class="container">
    <%= simple_form_for [@booking, @review] do |f| %>
      <%= f.input :user_review, label: 'Leave a user review:' %>
      <%= f.input :user_rating, label: 'Leave a user rating' %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="modal-footer">
  <button class="btn btn-primary">Save</button>
</div>
