<div class ="container-booking p-5 d-flex flex-column">
  <div>
    <h2> Booking Ref #<%= @booking.id %></h2>
  </div>
  <div>
    <h4 class="my-2" style="color: lime;"><%= "Upcoming @ #{@booking.listing.name}"%></h4>
  </div>
  <div class="d-flex flex-row">
    <div class="card-user m-0">
    <br>
    <p class="m-0 p-0"><strong>Address</strong></p>
    <p class="text-secondary m-0 py-2"><%= "#{@booking.listing.address}" %></p>
    <p class="m-0 p-0"><strong> Start: </strong></p>
    <p class="text-secondary m-0 py-2"><%= @booking.start_date %></p>
    <p class="m-0 p-0"><strong> End: </strong></p>
    <p class="text-secondary m-0 py-2"><%= @booking.end_date %></p>
    <p class="m-0 p-0"><strong> No. of Guest</strong></p>
    <p class="text-secondary m-0 py-2"><%= @booking.guests %> </p>
    <p class="m-0 p-0"><strong> Total Cost</strong></p>
    <p class="text-secondary  m-0 py-2"><%= @booking.cost %> </p>
    <p class="m-0 p-0"><strong> Booking Status</strong></p>
    <p class="text-secondary  m-0 py-2"><%= @booking.booking_status %></p>
  </div>

  <div class="listing-details">

    <% if @booking.listing.photos.first %>
      <%= cl_image_tag @booking.listing.photos.first.key, class: "booking-img" %>
    <% else %>
      <img src="https://images.unsplash.com/photo-1523217582562-09d0def993a6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1180&q=80" class="booking-img" alt="dummy-img">
    <% end %>
    <br>
    <br>
    <%= link_to listings_path, class: "text-decoration-none" do %>
      <div class="mx-auto status confirmed review d-flex align-items-center">
        <div class="w-100 d-flex align-items-center justify-content-center">
        Back to listings
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>
