<div class ="container-booking">
  <div class="card-user">
    <h3> Booking Ref #<%= @booking.id %></h3>
    <br>
    <p><strong> Guest Name: </strong></p>
    <p class="text-secondary"><%= @booking.user.first_name %></p>
    <p><strong> Date: </strong></p>
    <p class="text-secondary"><%= "#{@booking.start_date} to #{@booking.end_date}" %></p>
    <p><strong> No. of Guest: </strong></p>
    <p class="text-secondary"><%= @booking.guests %> </p>
    <p><strong> Total Cost: </strong></p>
    <p class="text-secondary"><%= @booking.cost %> </p>
    <p><strong> Booking Status: </strong></p>
    <p class="text-secondary"><%= @booking.booking_status %></p>
  </div>

  <div class="listing-details">
    <h3><%= @booking.listing.name %></h3>
    <p class="text-secondary"><%= @booking.listing.address %></p>
    <% if @booking.listing.photos.first %>
      <%= cl_image_tag @booking.listing.photos.first.key, class: "booking-img" %>
    <% else %>
      <img src="https://images.unsplash.com/photo-1523217582562-09d0def993a6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1180&q=80" class="booking-img" alt="dummy-img">
    <% end %>
    <br>
    <br>
    <%= link_to listings_path do %>
      <div class="mx-auto status confirmed review d-flex align-items-center">
        <i class="ml-3 fas fa-seedling"></i>
        <div class="w-100 d-flex align-items-center justify-content-center">
        Back to listings
        </div>
      </div>
    <% end %>
  </div>
</div>
