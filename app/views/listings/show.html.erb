<div class="container">
  <div>
    <div>
      <h2><%= @listing.name %></h2>
    </div>
    <div class='d-flex flex-row justify-content-between'>
      <div>
        <p>
          <%= @listing.address %>
        </p>
      </div>
      <div>
        <i class="far fa-share-square px-2"> Share</i>
        <i class="far fa-heart px-2"> Save</i>
      </div>
    </div>
  </div>
  <div>
    <img src="https://images.unsplash.com/photo-1523217582562-09d0def993a6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1180&q=80" class="img-fluid" alt="">
  </div>
  <div class="container my-2 p-0">
    <div class="d-flex flex-row justify-content-between align-items-center border-bottom">
      <div>
        <h5>
          <%= "Space hosted by #{@listing.user.email}" %>
        </h5>
        <p>
          <%= "#{@listing.capacity} professionals" %>
        </p>
      </div>
      <div>
        <img src="https://images.unsplash.com/photo-1637690980835-2e8958d666db?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=830&q=80" class="avatar" alt="">
      </div>
    </div>
    <div class="py-2">
      <p><%= @listing.description %></p>
    </div>
  </div>
</div>
