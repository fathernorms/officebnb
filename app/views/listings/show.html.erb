<div class="container">
  <div class="pl-3 mt-2">
    <div class="container-listing-top">
      <h2><%= @listing.name %></h2>
    </div>
    <div class='d-flex flex-row justify-content-between'>
      <div>
        <p>
          <%= @listing.address %>
        </p>
      </div>
      <div>
        <i class="far fa-share-square px-2"> Share</i>
        <i class="far fa-heart px-2"> Save</i>
      </div>
    </div>
  </div>
  <div class="container cb">
    <% if @listing.photos.first %>
      <div class="row photos">
        <%= render "photos", listing: @listing %>
      </div>
    <% else %>
      <img src="https://images.unsplash.com/photo-1523217582562-09d0def993a6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1180&q=80", style="width: auto; height: 400px; border-radius: 5px"", class="img-fluid" alt="dummy-img">
    <% end %>
  </div>
  <div class="container my-2 p-0">
    <div class="d-flex flex-row justify-content-between align-items-center border-bottom">
      <div class="container-host-details pl-3 mt-2">
        <h5>
        <span style="font-size: 18px"><i class="fas fa-laptop-house"></i></span><%= " Space hosted by "%><span class="owner-details"><%= "#{@listing.user.first_name}" %></span>
        </h5>
        <p>
        <span style="font-size: 18px"><i class="fas fa-house-user"></i></span><span class="owner-details"><%= " #{@listing.capacity}" %></span><%= " professionals" %>
        </p>
      </div>
      <div>
        <% if @listing.user.photo.key %>
            <%= cl_image_tag current_user.photo.key, class: "avatar" %>
        <% else %>
            <%= image_tag "default_user.png", class: "avatar" %>
        <% end %>
      </div>
    </div>
    <div class="pl-3 py-2 border-bottom">
      <p><%= @listing.description %></p>
    </div>
  </div>

  <div class="container d-flex flex-row justify-content-around align-items-center">
    <div id="calendar-cont" class="col-6">
      <h3 id="date-select-label">Please select a start date:</h3>
      <div id="calendar">
      </div>
    </div>
  <div class="booking mb-2 col-6">
    <div id="booking-form">
      <%= simple_form_for [@listing, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.input :guests, collection: 1..@listing.capacity %>
        <%= f.button :submit, class:"btn btn-success btn-block" %>
      <% end %>
    </div>
  </div>
  </div>

  <div class="container-review border-top pt-2 pl-3 mt-4">
    <h3>Reviews</h3>
    <p>BLAH</p>
    <p>BLAH</p>
    <p>BLAH BLAH</p>
  </div>

<div class="border-top pt-2 pl-3 mt-5">
  <h3>Where you'll be</h3>
  <div>
  <div id="map"
    class= "mt-5"
    style="width: 75%; height: 400px; margin: 0 auto;"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>
  </div>
</div>
</div>

<%= javascript_pack_tag 'fullcalendar/index' %>
<%= stylesheet_pack_tag 'fullcalendar/index' %>
